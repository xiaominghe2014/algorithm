#make

UNAME_S:=$(shell uname -s)

all:   install

.PHONY install:
install:

ifeq ($(UNAME_S),Linux)
	  then sudo add-apt-repository -y ppa:ubuntu-toolchain-r/test
	  then sudo add-apt-repository -y ppa:zoogie/sdl2-snapshots
	  then sudo apt-get update
	  then sudo apt-get install libsdl2-dev
	  then sudo apt-get install -y gcc-4.8
	  then sudo apt-get install -y g++-4.8
	  then sudo update-alternatives --install /usr/bin/gcc gcc /usr/bin/gcc-4.8 50
	  then sudo update-alternatives --install /usr/bin/g++ g++ /usr/bin/g++-4.8 50
else
	@echo "is not linux sys opt"

endif
